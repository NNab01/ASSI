<head>
<style>
 body{
    height:100vh;
    background-image: url('<%= asset_path('event.jpg') %>');
    background-size: cover;
  background-position: center;
  background-attachment: fixed;

  }

  .show-myCard{
    background-color: rgb(0,0,0);
     width: calc(800px + 22 * ((100vw - 500px) / (500*7)));
    height: calc(600px + 110 * ((100vw - 500px) / (500*2)));
     transform: translateY(-50px);
     }
   .nInput{
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 15px;
    font-size: calc(10px + 20 * (100vw - 500px) / 4500);
   }
     .nButton-style {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #ff9900;
    color: white;
    border: none;
    border-radius: calc(4px + 20 * (100vw - 500px) / 5500);
    border: none;
    cursor: pointer;
    font-family: "Geologica";
    color: #fff;
    transition: background-color 0.3s, color 0.3s;
    transition: background-color 0.3s ease-in-out;
    width: calc(100px + 30 * (100vw - 500px) / 4000);
  }
  
  .nButton-style:hover {
    background-color: #e68a00;
  }
  
  </style>
</head>
<body>
<header class="show-header">
		
<%= image_tag("logo.png",class: "img-responsive")%>
</header> 
<h2>Log innn</h2>

<div class="form-container show-container">
      <div class="show-myCard">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

</div>
</div>

<%= render "users/shared/links" %>
</body>