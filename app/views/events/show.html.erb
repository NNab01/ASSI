    <style>
    
#footer{
  position:fixed;
  bottom: 20px;
  left:0;
  width:100%;
  text-align: center 

}
.fas{
  margin-right: 8px;
  color:black

}
.fas:hover{
  transform: scale(1.3);
  color: grey;
  cursor:pointer

}
.saved .fas{
  color:red;
}
.disabled{
  opacity: 0.5; 
  pointer-events: none; 
  cursor: not-allowed
}
    </style>

<h1>Events#show</h1>
<% if flash[:success] %>
  <div class="success-message">
    <%= flash[:success] %>
  </div>
<% end %>
<div class="events">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Date</th>
      <th>Location</th>
      <th>Left Presales</th>
      <th>Organizer</th>
      <% if can?(:manage,:all)%>
      <th>Lista Acquirenti</th>
      <%end%>
      <th colspan="8"></th>
    </tr>
  </thead>
  <tbody>
  
  <tr>
    <td> <%= @event.title %></td> 
    <td><%= @event.price %></td>
    <td><%= @event.date %></td>
    <td><%= @event.location %></td>
    <td><%= @event.presales_left %></td>
<td><%if User.find(@event.organizer_id).username!=nil %>
    <%= link_to User.find(@event.organizer_id).username, user_path(User.find(@event.organizer_id)) %>
    <%end%></td>
    <% if can?(:manage,:all)%>
    <td><% presales=Presale.where(event_id: params[:id])%>
    <% usernames = presales.map { |presale| presale.user.username }.uniq%>
    <% usernames.each do |key, value|%>
    <%= value %>
    <%end%>

    </td>
    <%end%>
    </tr>
   
  </tbody>
</table>
</div>
<div>
<%= link_to "Back",:back %>
<% if @event.organizer_id==current_user.id%>
<%= link_to "Elimina",event_path(id: @event.id),method: :delete%> <!-- metodo base per riferirsi alla destroy altrimenti si hanno problemi -->
<% if !Ban.where(user_id: current_user.id).exists?%>
<%= link_to "Modifica",edit_event_path %>
<%end%>
<% end%>
<% if @event.status=="published"%>
<% if !Evaluation.exists?(event_id: @event.id, user_id: current_user.id)%>
<% if !Ban.where(user_id: current_user.id).exists?%>
<%= link_to "Valuta",new_event_evaluation_path(event_id: @event.id) %>
<% end%>
<%end%>

<%= link_to "Acquista" ,all_presales_path(event_id: @event.id)%>
<%end%>

</div>

<div id="footer" >

  <!-- Icona "Home" -->
  <%= link_to events_path do %>
    <i class="fas fa-home fa-2x"></i>
<% end %>

  <!-- Icona "Aggiungi" -->
  <% if can?(:create, Event)%>
    <% if !Ban.where(user_id: current_user.id).exists?%>
  <%= link_to new_event_path do %>
  <a href="<%= new_event_path %>">
    <i class="fas fa-plus fa-2x"></i>
  <% end %>
  <%end%>
<% end %>
<!-- Icona "Salva" -->
<%= link_to user_saves_path(user_id: current_user.id) do %>
    <i class="fas fa-save fa-2x"></i>
  </a>
  <%end%>
 <!-- Icona "Utente" -->
<%= link_to user_path(current_user) do %>
    <i class="fas fa-user fa-2x"></i>
<% end %> 
	  </div>