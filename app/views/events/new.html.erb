<h1>Events#new</h1>
<head>
  <title>Pubblica il tuo evento</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
    }
    label {
      display: block;
      margin-bottom: 10px;
    }
    input[type="text"],
    input[type="date"],
    input[type="number"] {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    textarea {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
      resize: vertical;
    }
    .btn {
      background-color: #333;
      color: #fff;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 4px;
      display: inline-block;
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <h1>Pubblica il tuo evento</h1>
  <%= form_with model: @event, url: create_event_path(@event), method: :post do |form| %>
  <label for="title">Titolo dell'evento:</label>
  <%= form.text_field :title, id: "title", required: true %>

  <label for="date">Data:</label>
  <%= form.date_field :date, id: "date", required: true %>

  <label for="price">Prezzo:</label>
  <%= form.number_field :price, id: "price", min: 0, step: 0.01, required: true %>

  <label for="location">Luogo:</label>
  <%= form.text_field :location, id: "location", required: true %>

  <label for="limit">Limite partecipanti:</label>
  <%= form.number_field :limit, id: "limit", min: 1%>

  <%= form.submit "Salva" %> <button>
  <%= link_to "Annulla",events_path%></button>
<% end %>

</body>
</html>