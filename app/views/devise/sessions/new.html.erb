
<style>

 body{
    height:100vh;
    background-image: url('<%= asset_path('event.jpg') %>');
    background-size: cover;
  background-position: center;
  background-attachment: fixed;

  }

  .error-text{
    color: #ff9900;
  }
  .show-myCard{
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgb(0,0,0);
     width: calc(800px + 22 * ((100vw - 500px) / (500*7)));
     height: calc(450px + 110 * ((100vw - 500px) / (500*2)));
     transform: translateY(-50px);
     }
   .nInput{
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    margin-bottom: 15px;
    font-size: calc(10px + 20 * (100vw - 500px) / 4500);
   }

.nButton-style {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #ff9900;
    color: white;
    border: none;
    border-radius: calc(8px + 20 * (100vw - 500px) / 5500); /* Aumenta il valore 4px a 8px per aumentare la grandezza dei bordi */
    cursor: pointer;
    font-family: "Playfair Display";
    transition: background-color 0.3s, color 0.3s;
    width: calc(120px + 30 * (100vw - 500px) / 4000); /* Aumenta il valore 100px a 120px per aumentare la larghezza */
    height: 40px; /* Imposta un'altezza fissa per centrare il testo verticalmente */
    text-align: center; /* Centra il testo orizzontalmente */
}

  
  .nButton-style:hover {
    background-color: #e68a00;
  }
</style>
<header class="show-header">
<%= image_tag("logo.png",class: "img-responsive")%>
</header> 
	
<body>
<div class="form-container show-container">
<div class="show-myCard">
<h1 style="color: white; font-family: Playfair Display">Log in</h1>

<% if flash[:alert] %>
  <div class="modal-header error-text ">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email,  class: "nInput" , autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "nInput" , autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <br>
  <div class="actions" style="display: flex; justify-content: center; align-items: center;">
    <%= f.submit "Log in", class: "nButton-style"  %>
</div>

<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</body>